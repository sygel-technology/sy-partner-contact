    <record id="partner_invoicing_frecuency_view_move_form" model="ir.ui.view">
        <field name="name">partner.invoicing.frecuency.view.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="invoice_vendor_bill_id" position="after">
                <field name="partner_invoicing_frecuency_id" options="{'no_create_edit': True, 'no_create': True}"/>
            </field>
        </field>
    </record>
    <record id="partner_invoicing_frecuency_view_invoice_tree" model="ir.ui.view">
        <field name="name">partner.invoicing.frecuency.view.invoice.tree</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <field name="state" position="after">
                <field name="partner_invoicing_frecuency_id" optional="hide"/>
            </field>
        </field>
    </record>
    <record id="partner_invoicing_frecuency_view_account_invoice_filter" model="ir.ui.view">
        <field name="name">partner.invoicing.frecuency.view.account.invoice.filter</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="partner_invoicing_frecuency_id" string="Invoicing Frecuency" filter_domain="[('partner_invoicing_frecuency_id', 'ilike', self)]"/>
            </field>
            <filter name="status" position="after">
                <filter string="Invoicing Frecuency" name="partner_invoicing_frecuency" domain="[]" context="{'group_by':'partner_invoicing_frecuency_id'}"/>
            </filter>
        </field>
    </record>
</odoo>
