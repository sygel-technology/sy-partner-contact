    <record id="partner_invoicing_frecuency_view_partner_form" model="ir.ui.view">
        <field name="name">partner.invoicing.frecuency.view.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="account.view_partner_property_form"/>
        <field name="arch" type="xml">
            <group name="banks" position="after">
                <group>
                    <field name="partner_invoicing_frecuency_id" options="{'no_create_edit': True, 'no_create': True}"/>
                </group>
            </group>
        </field>
    </record>
    <record id="partner_invoicing_frecuency_view_partner_tree" model="ir.ui.view">
        <field name="name">partner.invoicing.frecuency.view.partner.tree</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree" />
        <field name="arch" type="xml">
            <field name="category_id" position="after">
                <field name="partner_invoicing_frecuency_id" optional="hide"/>
            </field>
        </field>
    </record>
    <record id="partner_invoicing_frecuency_view_res_partner_filter" model="ir.ui.view">
        <field name="name">partner.invoicing.frecuency.view.res.partner.filter</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <field name="user_id" position="after">
                <field name="partner_invoicing_frecuency_id" string="Invoicing Frecuency" filter_domain="[('partner_invoicing_frecuency_id', 'ilike', self)]"/>
            </field>
            <filter name="group_country" position="after">
                <filter name="partner_invoicing_frecuency_id" string="Invoicing Frecuency" context="{'group_by': 'partner_invoicing_frecuency_id'}"/>
            </filter>
        </field>
    </record>
</odoo>
