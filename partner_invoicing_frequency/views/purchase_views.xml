    <record id="partner_invoicing_frecuency_purchase_order_form" model="ir.ui.view">
        <field name="name">partner.invoicing.frecuency.purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <field name="partner_ref" position="after">
                <field name="partner_invoicing_frecuency_id" options="{'no_create_edit': True, 'no_create': True}"/>
            </field>
        </field>
    </record>
    <record id="partner_invoicing_frecuency_purchase_order_view_tree" model="ir.ui.view">
        <field name="name">partner.invoicing.frecuency.purchase.order.view.tree</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_view_tree"/>
        <field name="arch" type="xml">
            <field name="state" position="after">
                <field name="partner_invoicing_frecuency_id" optional="hide"/>
            </field>
        </field>
    </record>
    <record id="partner_invoicing_frecuency_purchase_order_kpis_tree" model="ir.ui.view">
        <field name="name">partner.invoicing.frecuency.purchase.order.kpis.tree</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_kpis_tree"/>
        <field name="arch" type="xml">
            <field name="state" position="after">
                <field name="partner_invoicing_frecuency_id" optional="hide"/>
            </field>
        </field>
    </record>
    <record id="partner_invoicing_frecuency_view_purchase_order_filter" model="ir.ui.view">
        <field name="name">partner.invoicing.frecuency.view.purchase.order.filter</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.view_purchase_order_filter"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="partner_invoicing_frecuency_id" string="Invoicing Frecuency" filter_domain="[('partner_invoicing_frecuency_id', 'ilike', self)]"/>
            </field>
            <filter name="vendor" position="after">
                <filter string="Invoicing Frecuency" name="partner_invoicing_frecuency" domain="[]" context="{'group_by':'partner_invoicing_frecuency_id'}"/>
            </filter>
        </field>
    </record>
    <record id="partner_invoicing_frecuency_purchase_order_view_search" model="ir.ui.view">
        <field name="name">partner.invoicing.frecuency.purchase.order.view.search</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_view_search"/>
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="partner_invoicing_frecuency_id" string="Invoicing Frecuency" filter_domain="[('partner_invoicing_frecuency_id', 'ilike', self)]"/>
            </field>
            <filter name="vendor" position="after">
                <filter string="Invoicing Frecuency" name="partner_invoicing_frecuency" domain="[]" context="{'group_by':'partner_invoicing_frecuency_id'}"/>
            </filter>
        </field>
    </record>
</odoo>
