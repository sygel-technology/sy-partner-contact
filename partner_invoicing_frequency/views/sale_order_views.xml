    <record id="partner_invoicing_frecuency_view_order_form" model="ir.ui.view">
        <field name="name">partner.invoicing.frecuency.view.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="partner_shipping_id" position="after">
                <field name="partner_invoicing_frecuency_id" options="{'no_create_edit': True, 'no_create': True}"/>
            </field>
        </field>
    </record>
    <record id="partner_invoicing_frecuency_view_order_tree" model="ir.ui.view">
        <field name="name">partner.invoicing.frecuency.view.order.tree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <field name="state" position="after">
                <field name="partner_invoicing_frecuency_id" optional="hide"/>
            </field>
        </field>
    </record>
    <record id="partner_invoicing_frecuency_view_quotation_tree" model="ir.ui.view">
        <field name="name">partner.invoicing.frecuency.view.quotation.tree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <field name="state" position="after">
                <field name="partner_invoicing_frecuency_id" optional="hide"/>
            </field>
        </field>
    </record>
    <record id="partner_invoicing_frecuency_view_sales_order_filter" model="ir.ui.view">
        <field name="name">partner.invoicing.frecuency.view.sales.order.filter</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="partner_invoicing_frecuency_id" string="Invoicing Frecuency" filter_domain="[('partner_invoicing_frecuency_id', 'ilike', self)]"/>
            </field>
            <filter name="salesperson" position="after">
                <filter string="Invoicing Frecuency" name="invoicing_frecuency" domain="[]" context="{'group_by':'partner_invoicing_frecuency_id'}"/>
            </filter>
        </field>
    </record>
</odoo>
