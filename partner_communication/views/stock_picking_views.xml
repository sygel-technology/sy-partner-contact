    <record id="partner_communication_view_picking_form" model="ir.ui.view">
        <field name="name">partner.communication.view.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="partner_communication_channel_id" optional="hide" options="{'no_create_edit': True, 'no_create': True}"/>
            </field>
        </field>
    </record>
    <record id="partner_communication_vpicktree" model="ir.ui.view">
        <field name="name">partner.communication.vpicktree</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree"/>
        <field name="arch" type="xml">
            <field name="state" position="after">
                <field name="partner_communication_channel_id" optional="hide"/>
            </field>
        </field>
    </record>
    <record id="partner_communication_view_picking_internal_search" model="ir.ui.view">
        <field name="name">partner.communication.view.picking.internal.search</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_internal_search"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="partner_communication_channel_id" string="Communication Channel" filter_domain="[('partner_communication_channel_id', 'ilike', self)]"/>
            </field>
            <filter name="picking_type" position="after">
                <filter string="Communication Channel" name="partner_communication_channel" domain="[]" context="{'group_by':'partner_communication_channel_id'}"/>
            </filter>
        </field>
    </record>
</odoo>
