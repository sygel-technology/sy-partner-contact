    <record id="partner_communication_view_partner_form" model="ir.ui.view">
        <field name="name">partner.communication.view.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <field name="category_id" position="after">
                <field name="partner_communication_channel_id" options="{'no_create_edit': True, 'no_create': True}"/>
            </field>
        </field>
    </record>
    <record id="partner_communication_view_partner_tree" model="ir.ui.view">
        <field name="name">partner.communication.view.partner.tree</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree" />
        <field name="arch" type="xml">
            <field name="category_id" position="after">
                <field name="partner_communication_channel_id" optional="hide"/>
            </field>
        </field>
    </record>
    <record id="partner_communication_view_res_partner_filter" model="ir.ui.view">
        <field name="name">partner.communication.view.res.partner.filter</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <field name="user_id" position="after">
                <field name="partner_communication_channel_id" string="Communication Channel" filter_domain="[('partner_communication_channel_id', 'ilike', self)]"/>
            </field>
            <filter name="group_country" position="after">
                <filter name="partner_communication_channel_id" string="Communication Channel" context="{'group_by': 'partner_communication_channel_id'}"/>
            </filter>
        </field>
    </record>
</odoo>
