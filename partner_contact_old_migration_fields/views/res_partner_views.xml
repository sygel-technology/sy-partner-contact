<odoo>
    <record id="partner_contact_old_migration_fields_view_partner_form" model="ir.ui.view">
        <field name="name">partner.contact.old.migration.fields.view.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='internal_notes']" position='after'>
                <page name="migration_info" string="Migration Info">
                    <group>
                        <group>
                            <field name="old_partner_id" />
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
